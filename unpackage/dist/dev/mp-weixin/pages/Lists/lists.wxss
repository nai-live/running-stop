
.bar {
	width: 100%;
	height: 70rpx;
	border-bottom: 1px solid #ccc;
}
.content-box{
	width: 100%;
	height: 1100rpx;
}
.con-text {
	line-height: 70rpx;
	height: 70rpx;
	width: 25%;
	float: left;
	text-align: center;
	font-size: 28rpx;
	border-bottom: 2rpx solid white;
}
.nnone {
	line-height: 70rpx;
	height: 70rpx;
	width: 25%;
	float: left;
	text-align: center;
	font-size: 28rpx;
	border-bottom: 2px solid #FD6801;
	color: #FD6801;
}
.text-box{
	width: 95%;	
	height: 470rpx;
	margin: auto;
	margin-top: 30rpx;
	border-radius: 7px;
	border: 1px solid #ccc;
	box-shadow:0px 4px 2px #eee;
	margin-bottom: 50rpx;
}
.pic-box{
	width: 100%;
	height: 240rpx;
	border-radius: 7px;
}
.pic{
	width: 100%;
	height: 100%;
	border-radius: 7px;
}
.btn-box{
	width: 100%;
	height: 130rpx;
	border-bottom: 1px solid #ccc;
}
.left-box{
	float: left;
	width: 50%;
	height: 110rpx;
	padding-top: 15rpx;
}
.right-box{
	float: left;
	width: 48%;
	height: 110rpx;
}
.txt-top{
	margin-bottom: 10rpx;
	text-indent: 15rpx;
}
.txt-bottom{
	text-indent: 15rpx;
	color: #999;
	font-size: 26rpx;
}
.btn{
	width: 120rpx;
	height: 60rpx;
	background-color: #FD6801;
	border-radius: 30px;
	color: white;
	text-align: center;
	margin: auto;
	line-height: 60rpx;
	margin-top: 26rpx;
	font-size: 26rpx;
	margin-right: 0rpx;
}
.bottom-box{
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	text-align: center;
}

